{
  "name": "nft-marketplace",
  "scripts": {
    "solhint": "./node_modules/.bin/solhint -f table contracts/contracts/**/*.sol",
    "prettier:solidity": "./node_modules/.bin/prettier --write contracts/contracts/**/*.sol"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier:solidity"
    }
  }
}
